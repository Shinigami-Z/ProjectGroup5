<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 text-light">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Item Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Item Name"
                    name="ItemName"
                    value="<%= Products.ItemName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numOfUnitsNumberField">Number of Units</label>
                    <input type="number" class="form-control"
                    id="numOfUnitsNumberField"
                    placeholder="Enter the Number of Units"
                    name="NumOfUnits"
                    value="<%= Products.NumOfUnits %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="pricePerUnitNumberField">Price per Unit</label>
                    <input type="number" class="form-control"
                    id="pricePerUnitNumberField"
                    placeholder="Enter the Price per Unit"
                    name="PricePerUnit"
                    value="<%= Products.PricePerUnit %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="totalValueNumberField">Total Value</label>
                    <input type="number" class="form-control"
                    id="totalValueNumberField"
                    placeholder="Enter the Total Value"
                    name="TotalValue"
                    value="<%= Products.TotalValue %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/InventoryRT" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>
